@model EmployeeEditViewModel

@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "administrator.ico");
}

<form enctype="multipart/form-data" method="post" asp-action="edit" asp-controller="home" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingPhotoPath" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Department"></label>
        <div class="col-sm-10">
            <select class="custom-select mr-sm-2" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Photo"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input class="form-control custom-file-input" asp-for="Photo" />
                <label class="custom-file-label">Click here to change your photo</label>
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="img-thumbnail" src="@photoPath" asp-append-version="true" />
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(filename);
                });
            });
        </script>
    }
</form>